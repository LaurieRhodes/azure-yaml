{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "metadata": {
        "comments": "This playbook uses the RiskIQ Intelligence connector to automatically enrich incidents generated by Sentinel for host/domain values only.",
        "author": "Brandon Dixon, RiskIQ"
    },
    "parameters": {
        "PlaybookName": {
            "defaultValue": "Summary-Host-Enrichment",
            "type": "string"
        },
        "UserName": {
            "defaultValue": "<username>@<domain>",
            "type": "string"
        }
    },
    "variables": {
        "AzureSentinelConnectionName": "[concat('azuresentinel-', parameters('PlaybookName'))]",
        "RiskIQConnectionName": "[concat('riskiqintelligence-', parameters('PlaybookName'))]"
    },
    "resources": [{
        "type": "Microsoft.Web/connections",
        "apiVersion": "2016-06-01",
        "name": "[variables('RiskIQConnectionName')]",
        "location": "[resourceGroup().location]",
        "properties": {
            "customParameterValues": {},
            "api": {
                "id": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/riskiqintelligence')]"
            }
        }
    }, {
        "type": "Microsoft.Web/connections",
        "apiVersion": "2016-06-01",
        "name": "[variables('AzureSentinelConnectionName')]",
        "location": "[resourceGroup().location]",
        "properties": {
            "customParameterValues": {},
            "api": {
                "id": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/azuresentinel')]"
            }
        }
    }, {
        "type": "Microsoft.Logic/workflows",
        "apiVersion": "2017-07-01",
        "name": "[parameters('PlaybookName')]",
        "location": "[resourceGroup().location]",
        "tags": {
            "LogicAppsCategory": "security"
        },
        "dependsOn": [
            "[resourceId('Microsoft.Web/connections', variables('RiskIQConnectionName'))]",
            "[resourceId('Microsoft.Web/connections', variables('AzureSentinelConnectionName'))]"
        ],
        "definition": {
            "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
            "actions": {
                "Alert_-_Get_hosts": {
                    "inputs": {
                        "body": "@triggerBody()?['Entities']",
                        "host": {
                            "connection": {
                                "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                            }
                        },
                        "method": "post",
                        "path": "/entities/host"
                    },
                    "runAfter": {},
                    "type": "ApiConnection"
                },
                "For_each_host_child_pairs": {
                    "actions": {
                        "Add_comment_to_incident_(V2)_5": {
                            "inputs": {
                                "body": {
                                    "Value": "Associated Children Host Pairs for @{items('For_each_host_child_pairs')?['HostName']}.@{items('For_each_host_child_pairs')?['DnsDomain']}: @{body('Get_children_host_pairs_of_host')?['totalElements']}\nView additional details at https://community.riskiq.com/search/@{items('For_each_host_child_pairs')?['HostName']}.@{items('For_each_host_child_pairs')?['DnsDomain']}/hostpairs"
                                },
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                                    }
                                },
                                "method": "put",
                                "path": "/Comment/@{encodeURIComponent(triggerBody()?['WorkspaceSubscriptionId'])}/@{encodeURIComponent(triggerBody()?['WorkspaceId'])}/@{encodeURIComponent(triggerBody()?['WorkspaceResourceGroup'])}/@{encodeURIComponent('Alert')}/@{encodeURIComponent(triggerBody()?['SystemAlertId'])}"
                            },
                            "runAfter": {
                                "Get_children_host_pairs_of_host": [
                                    "Succeeded"
                                ]
                            },
                            "type": "ApiConnection"
                        },
                        "Get_children_host_pairs_of_host": {
                            "inputs": {
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['riskiqintelligence']['connectionId']"
                                    }
                                },
                                "method": "get",
                                "path": "/v0/hostattributes/hosts/trackers/children/@{encodeURIComponent(items('For_each_host_child_pairs')?['HostName'],'.',items('For_each_host_child_pairs')?['DnsDomain'])}"
                            },
                            "runAfter": {},
                            "type": "ApiConnection"
                        }
                    },
                    "foreach": "@body('Alert_-_Get_hosts')?['Hosts']",
                    "runAfter": {
                        "Alert_-_Get_hosts": [
                            "Succeeded"
                        ]
                    },
                    "type": "Foreach"
                },
                "For_each_host_components": {
                    "actions": {
                        "Add_comment_to_incident_(V2)_3": {
                            "inputs": {
                                "body": {
                                    "Value": "Associated Web Components for @{items('For_each_host_components')?['HostName']}.@{items('For_each_host_components')?['DnsDomain']}: @{body('Get_the_web_components_for_a_host')?['totalElements']}\nView additional details at https://community.riskiq.com/search/@{items('For_each_host_components')?['HostName']}.@{items('For_each_host_components')?['DnsDomain']}/components"
                                },
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                                    }
                                },
                                "method": "put",
                                "path": "/Comment/@{encodeURIComponent(triggerBody()?['WorkspaceSubscriptionId'])}/@{encodeURIComponent(triggerBody()?['WorkspaceId'])}/@{encodeURIComponent(triggerBody()?['WorkspaceResourceGroup'])}/@{encodeURIComponent('Alert')}/@{encodeURIComponent(triggerBody()?['SystemAlertId'])}"
                            },
                            "runAfter": {
                                "Get_the_web_components_for_a_host": [
                                    "Succeeded"
                                ]
                            },
                            "type": "ApiConnection"
                        },
                        "Get_the_web_components_for_a_host": {
                            "inputs": {
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['riskiqintelligence']['connectionId']"
                                    }
                                },
                                "method": "get",
                                "path": "/v0/hostattributes/hosts/components/@{encodeURIComponent(items('For_each_host_components')?['HostName'],'.',items('For_each_host_components')?['DnsDomain'])}"
                            },
                            "runAfter": {},
                            "type": "ApiConnection"
                        }
                    },
                    "foreach": "@body('Alert_-_Get_hosts')?['Hosts']",
                    "runAfter": {
                        "Alert_-_Get_hosts": [
                            "Succeeded"
                        ]
                    },
                    "type": "Foreach"
                },
                "For_each_host_cookies": {
                    "actions": {
                        "Add_comment_to_incident_(V2)_4": {
                            "inputs": {
                                "body": {
                                    "Value": "Associated Cookies for @{items('For_each_host_cookies')?['HostName']}.@{items('For_each_host_cookies')?['DnsDomain']}: @{body('Get_cookies_associated_with_host')?['totalElements']}\nView additional details at https://community.riskiq.com/search/@{items('For_each_host_cookies')?['HostName']}.@{items('For_each_host_cookies')?['DnsDomain']}/cookies"
                                },
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                                    }
                                },
                                "method": "put",
                                "path": "/Comment/@{encodeURIComponent(triggerBody()?['WorkspaceSubscriptionId'])}/@{encodeURIComponent(triggerBody()?['WorkspaceId'])}/@{encodeURIComponent(triggerBody()?['WorkspaceResourceGroup'])}/@{encodeURIComponent('Alert')}/@{encodeURIComponent(triggerBody()?['SystemAlertId'])}"
                            },
                            "runAfter": {
                                "Get_cookies_associated_with_host": [
                                    "Succeeded"
                                ]
                            },
                            "type": "ApiConnection"
                        },
                        "Get_cookies_associated_with_host": {
                            "inputs": {
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['riskiqintelligence']['connectionId']"
                                    }
                                },
                                "method": "get",
                                "path": "/v0/hostattributes/hosts/cookies/@{encodeURIComponent(items('For_each_host_cookies')?['HostName'],'.',items('For_each_host_cookies')?['DnsDomain'])}"
                            },
                            "runAfter": {},
                            "type": "ApiConnection"
                        }
                    },
                    "foreach": "@body('Alert_-_Get_hosts')?['Hosts']",
                    "runAfter": {
                        "Alert_-_Get_hosts": [
                            "Succeeded"
                        ]
                    },
                    "type": "Foreach"
                },
                "For_each_host_parent_pairs": {
                    "actions": {
                        "Add_comment_to_incident_(V2)_6": {
                            "inputs": {
                                "body": {
                                    "Value": "Associated Parent Host Pairs for @{items('For_each_host_parent_pairs')?['HostName']}.@{items('For_each_host_parent_pairs')?['DnsDomain']}: @{body('Get_parent_host_pairs_of_host')?['totalElements']}\nView additional details at https://community.riskiq.com/search/@{items('For_each_host_parent_pairs')?['HostName']}.@{items('For_each_host_parent_pairs')?['DnsDomain']}/hostpairs"
                                },
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                                    }
                                },
                                "method": "put",
                                "path": "/Comment/@{encodeURIComponent(triggerBody()?['WorkspaceSubscriptionId'])}/@{encodeURIComponent(triggerBody()?['WorkspaceId'])}/@{encodeURIComponent(triggerBody()?['WorkspaceResourceGroup'])}/@{encodeURIComponent('Alert')}/@{encodeURIComponent(triggerBody()?['SystemAlertId'])}"
                            },
                            "runAfter": {
                                "Get_parent_host_pairs_of_host": [
                                    "Succeeded"
                                ]
                            },
                            "type": "ApiConnection"
                        },
                        "Get_parent_host_pairs_of_host": {
                            "inputs": {
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['riskiqintelligence']['connectionId']"
                                    }
                                },
                                "method": "get",
                                "path": "/v0/hostattributes/hosts/trackers/parents/@{encodeURIComponent(items('For_each_host_parent_pairs')?['HostName'],'.',items('For_each_host_parent_pairs')?['DnsDomain'])}"
                            },
                            "runAfter": {},
                            "type": "ApiConnection"
                        }
                    },
                    "foreach": "@body('Alert_-_Get_hosts')?['Hosts']",
                    "runAfter": {
                        "Alert_-_Get_hosts": [
                            "Succeeded"
                        ]
                    },
                    "type": "Foreach"
                },
                "For_each_host_pdns": {
                    "actions": {
                        "Add_comment_to_incident_(V2)": {
                            "inputs": {
                                "body": {
                                    "Value": "Associated Passive DNS for @{items('For_each_host_pdns')?['HostName']}.@{items('For_each_host_pdns')?['DnsDomain']}: @{body('Passive_DNS_results_by_name')?['recordCount']}\nView additional details at https://community.riskiq.com/search/@{items('For_each_host_pdns')?['HostName']}.@{items('For_each_host_pdns')?['DnsDomain']}/resolutions"
                                },
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                                    }
                                },
                                "method": "put",
                                "path": "/Comment/@{encodeURIComponent(triggerBody()?['WorkspaceSubscriptionId'])}/@{encodeURIComponent(triggerBody()?['WorkspaceId'])}/@{encodeURIComponent(triggerBody()?['WorkspaceResourceGroup'])}/@{encodeURIComponent('Alert')}/@{encodeURIComponent(triggerBody()?['SystemAlertId'])}"
                            },
                            "runAfter": {
                                "Passive_DNS_results_by_name": [
                                    "Succeeded"
                                ]
                            },
                            "type": "ApiConnection"
                        },
                        "Passive_DNS_results_by_name": {
                            "inputs": {
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['riskiqintelligence']['connectionId']"
                                    }
                                },
                                "method": "get",
                                "path": "/v0/pdns/name",
                                "queries": {
                                    "name": "@{items('For_each_host_pdns')?['HostName']}.@{items('For_each_host_pdns')?['DnsDomain']}"
                                }
                            },
                            "runAfter": {},
                            "type": "ApiConnection"
                        }
                    },
                    "foreach": "@body('Alert_-_Get_hosts')?['Hosts']",
                    "runAfter": {
                        "Alert_-_Get_hosts": [
                            "Succeeded"
                        ]
                    },
                    "type": "Foreach"
                },
                "For_each_host_ssl": {
                    "actions": {
                        "Add_comment_to_incident_(V2)_8": {
                            "inputs": {
                                "body": {
                                    "Value": "Associated SSL Certificates for @{items('For_each_host_ssl')?['HostName']}.@{items('For_each_host_ssl')?['DnsDomain']}: @{body('Get_SSL_certificates_by_name')?['totalElements']}\nView additional details at https://community.riskiq.com/search/@{items('For_each_host_ssl')?['HostName']}.@{items('For_each_host_ssl')?['DnsDomain']}/domaincertificates"
                                },
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                                    }
                                },
                                "method": "put",
                                "path": "/Comment/@{encodeURIComponent(triggerBody()?['WorkspaceSubscriptionId'])}/@{encodeURIComponent(triggerBody()?['WorkspaceId'])}/@{encodeURIComponent(triggerBody()?['WorkspaceResourceGroup'])}/@{encodeURIComponent('Alert')}/@{encodeURIComponent(triggerBody()?['SystemAlertId'])}"
                            },
                            "runAfter": {
                                "Get_SSL_certificates_by_name": [
                                    "Succeeded"
                                ]
                            },
                            "type": "ApiConnection"
                        },
                        "Get_SSL_certificates_by_name": {
                            "inputs": {
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['riskiqintelligence']['connectionId']"
                                    }
                                },
                                "method": "get",
                                "path": "/v1/ssl/cert/name",
                                "queries": {
                                    "name": "@{items('For_each_host_ssl')?['HostName']}.@{items('For_each_host_ssl')?['DnsDomain']}"
                                }
                            },
                            "runAfter": {},
                            "type": "ApiConnection"
                        }
                    },
                    "foreach": "@body('Alert_-_Get_hosts')?['Hosts']",
                    "runAfter": {
                        "Alert_-_Get_hosts": [
                            "Succeeded"
                        ]
                    },
                    "type": "Foreach"
                },
                "For_each_host_trackers": {
                    "actions": {
                        "Add_comment_to_incident_(V2)_2": {
                            "inputs": {
                                "body": {
                                    "Value": "Associated Trackers for @{items('For_each_host_trackers')?['HostName']}.@{items('For_each_host_trackers')?['DnsDomain']}: @{body('Get_trackers_for_a_host')?['totalElements']}\nView additional details at https://community.riskiq.com/search/@{items('For_each_host_trackers')?['HostName']}.@{items('For_each_host_trackers')?['DnsDomain']}/trackers"
                                },
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                                    }
                                },
                                "method": "put",
                                "path": "/Comment/@{encodeURIComponent(triggerBody()?['WorkspaceSubscriptionId'])}/@{encodeURIComponent(triggerBody()?['WorkspaceId'])}/@{encodeURIComponent(triggerBody()?['WorkspaceResourceGroup'])}/@{encodeURIComponent('Alert')}/@{encodeURIComponent(triggerBody()?['SystemAlertId'])}"
                            },
                            "runAfter": {
                                "Get_trackers_for_a_host": [
                                    "Succeeded"
                                ]
                            },
                            "type": "ApiConnection"
                        },
                        "Get_trackers_for_a_host": {
                            "inputs": {
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['riskiqintelligence']['connectionId']"
                                    }
                                },
                                "method": "get",
                                "path": "/v0/hostattributes/hosts/trackers/@{encodeURIComponent(items('For_each_host_trackers')?['HostName'],'.',items('For_each_host_trackers')?['DnsDomain'])}"
                            },
                            "runAfter": {},
                            "type": "ApiConnection"
                        }
                    },
                    "foreach": "@body('Alert_-_Get_hosts')?['Hosts']",
                    "runAfter": {
                        "Alert_-_Get_hosts": [
                            "Succeeded"
                        ]
                    },
                    "type": "Foreach"
                },
                "For_each_host_whois": {
                    "actions": {
                        "Add_comment_to_incident_(V2)_7": {
                            "inputs": {
                                "body": {
                                    "Value": "Associated WHOIS for @{items('For_each_host_whois')?['HostName']}.@{items('For_each_host_whois')?['DnsDomain']}: @{body('Get_the_current_WHOIS_for_a_domain')?['results']}\nView additional details at https://community.riskiq.com/search/@{items('For_each_host_whois')?['HostName']}.@{items('For_each_host_whois')?['DnsDomain']}/whois"
                                },
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                                    }
                                },
                                "method": "put",
                                "path": "/Comment/@{encodeURIComponent(triggerBody()?['WorkspaceSubscriptionId'])}/@{encodeURIComponent(triggerBody()?['WorkspaceId'])}/@{encodeURIComponent(triggerBody()?['WorkspaceResourceGroup'])}/@{encodeURIComponent('Alert')}/@{encodeURIComponent(triggerBody()?['SystemAlertId'])}"
                            },
                            "runAfter": {
                                "Get_the_current_WHOIS_for_a_domain": [
                                    "Succeeded"
                                ]
                            },
                            "type": "ApiConnection"
                        },
                        "Get_the_current_WHOIS_for_a_domain": {
                            "inputs": {
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['riskiqintelligence']['connectionId']"
                                    }
                                },
                                "method": "get",
                                "path": "/v0/whois/domain",
                                "queries": {
                                    "domain": "@{items('For_each_host_whois')?['HostName']}.@{items('For_each_host_whois')?['DnsDomain']}"
                                }
                            },
                            "runAfter": {},
                            "type": "ApiConnection"
                        }
                    },
                    "foreach": "@body('Alert_-_Get_hosts')?['Hosts']",
                    "runAfter": {
                        "Alert_-_Get_hosts": [
                            "Succeeded"
                        ]
                    },
                    "type": "Foreach"
                }
            },
            "contentVersion": "1.0.0.0",
            "outputs": {},
            "parameters": {
                "$connections": {
                    "defaultValue": {},
                    "type": "Object"
                }
            },
            "triggers": {
                "When_a_response_to_an_Azure_Sentinel_alert_is_triggered": {
                    "inputs": {
                        "body": {
                            "callback_url": "@{listCallbackUrl()}"
                        },
                        "host": {
                            "connection": {
                                "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                            }
                        },
                        "path": "/subscribe"
                    },
                    "type": "ApiConnectionWebhook"
                }
            }
        },
        "properties": {
            "state": "Enabled",
            "parameters": {
                "$connections": {
                    "value": {
                        "azuresentinel": {
                            "connectionId": "[resourceId('Microsoft.Web/connections', variables('AzureSentinelConnectionName'))]",
                            "connectionName": "[variables('AzureSentinelConnectionName')]",
                            "id": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/azuresentinel')]"
                        },
                        "riskiqintelligence": {
                            "connectionId": "[resourceId('Microsoft.Web/connections', variables('RiskIQConnectionName'))]",
                            "connectionName": "[variables('RiskIQConnectionName')]",
                            "id": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/riskiqintelligence')]"
                        }
                    }
                }
            }
        }
    }]
}
